{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Twiez Macro",
  "identifier": "com.twiezmacro.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/icon.ico"]
  },
  "app": {
    "windows": [
      {
        "title": "Twiez Macro",
        "width": 1180,
        "height": 760,
        "minWidth": 1180,
        "minHeight": 760,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "visible": true,
        "dragDropEnabled": false,
        "devtools": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  }
}

